#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

# fail fast
set -eo pipefail

# debug
set -x

# parse and derive params
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3
SUPERVISORD_VERSION="${SUPERVISORD_VERSION:-0.7.3}"

function error() {
  echo " !     $*" >&2
  exit 1
}

function topic() {
  echo "-----> $*"
}

if [ ! -f "${CACHE_DIR}/supervisord_${SUPERVISORD_VERSION}_Linux_64-bit.tar.gz" ]; then
  topic "Downloading supervisord"
  wget -P $CACHE_DIR "https://github.com/ochinchina/supervisord/releases/download/v${SUPERVISORD_VERSION}/supervisord_${SUPERVISORD_VERSION}_Linux_64-bit.tar.gz"
else
  topic "Using cached supervisord"
fi

topic "Unpacking supervisord"
tar -xf "$CACHE_DIR/supervisord.tar.gz" -C $CACHE_DIR

topic "Moving supervisord to bin"
mv $CACHE_DIR/supervisord $BUILD_DIR/bin
